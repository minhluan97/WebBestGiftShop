
@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LayoutSP.cshtml";
}

<div class="box">
    <h2 class="text-uppercase">Đăng Nhập</h2>
    <p class="lead">Đăng nhập tài khoản để mua sắm thuận tiện, dễ dàng hơn</p>
    <h3 class="text-danger">@ViewBag.ThongBao</h3>
    <hr>
    <form action="#" method="post">
        <div class="form-group">
            <label for="username_kh">Username</label>
            <input id="username_kh" name="username_kh" type="text" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="password_kh">Password:</label>
            <input id="password_kh" name="password_kh" type="password" class="form-control" required>
        </div>
        <div class="text-center">
            <a href="@Url.Action("QuenMatKhau","KhachHang")" class="btn btn-outline-danger pull-left" style="margin-top:0;"><i class="fa fa-question-circle"></i> Quên Mật Khẩu</a>
            <button type="submit" class="btn btn-template-outlined"><i class="fa fa-sign-in"></i> Đăng Nhập</button>            
            <a href="@Url.Action("DangKi","KhachHang")" class="btn btn-outline-info pull-right" style="margin-top:0;"><i class="fa fa-user-plus"></i> Tạo Tài Khoản</a>
        </div>
    </form>
</div>

