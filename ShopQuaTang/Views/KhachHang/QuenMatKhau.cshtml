@using ShopQuaTang.Models
@{
    ViewBag.Title = "QuenMatKhau";
    Layout = "~/Views/Shared/_LayoutSP.cshtml";
}

@using (Html.BeginForm("QuenMatKhau","KhachHang",FormMethod.Post))
{
    <h2 class="text-uppercase">Đổi Mật Khẩu</h2>
    <p class="lead">Bạn vui lòng nhập đúng số điện thoại để BestGiftShop  gửi và đặt lại mật khẩu cho tài khoản của bạn.</p>
    <hr>
    @Html.ValidationSummary(true)
    <form action="#" method="post">
        <div class="form-group">
            <label for="username_kh">Username</label>
            <input id="username_kh" name="username_kh" type="text" class="form-control" required>
        </div>
        <div class="form-group">
            <label>Số Điện Thoại</label>
            <input name="sdt_kh" type="number" class="form-control" required pattern="[0-9]">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-template-outlined"><i class="fa fa-user-md"></i> Cập Nhật Mật Khẩu</button>
        </div>
    </form>
}