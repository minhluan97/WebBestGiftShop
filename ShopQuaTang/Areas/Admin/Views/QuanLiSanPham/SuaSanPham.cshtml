@{
    ViewBag.Title = "ThemSanPham";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@using (Html.BeginForm("SuaSanPham", "QuanLiSanPham", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>BASIC VALIDATION</h2>
                </div>
                <div class="body">
                    <form>
                        @Html.ValidationSummary(true)
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" value="@Model.MA_SP" disabled>
                                <label class="form-label">Mã Sản Phẩm</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="TEN_SP" required value="@Model.TEN_SP" disabled>
                                <label class="form-label">Tên Sản Phẩm</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="number" class="form-control" name="GIA_SP" required value="@Model.GIA_SP">
                                <label class="form-label">Giá Bán</label>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                @Html.DropDownList("MA_DM")
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input class="form-control" type="date" required min="@string.Format("{0:yyyy}",DateTime.Now)-@string.Format("{0:MM}",DateTime.Now)-@string.Format("{0:dd}",DateTime.Today)" >
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="file" name="fileUpload" />
                                <img src="~/Images/@Model.MA_DM/@Model.AVA_SP" style="height:200px;width:200px;background-size:cover;" />(Ảnh Hiện Tại)
                                @ViewBag.ThongBao
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="number" class="form-control" name="SL_TON" required value="@Model.SL_TON">
                                <label class="form-label">Số Lượng Tồn Kho</label>
                            </div>
                        </div>
                       
                        <div class="form-group">
                            @if (Model.STATUS_SP == true)
                            {
                                <input type="radio" name="STATUS_SP" id="sttt" class="with-gap" value="true" checked>
                                <label for="sttt">Duyệt</label>

                                <input type="radio" name="STATUS_SP" id="sttf" class="with-gap" value="false">
                                <label for="sttf" class="m-l-20">Chưa Duyệt</label>
                            }
                            else
                            {
                                <input type="radio" name="STATUS_SP" id="sttt" class="with-gap" value="true">
                                <label for="sttt">Duyệt</label>

                                <input type="radio" name="STATUS_SP" id="sttf" class="with-gap" value="false" checked>
                                <label for="sttf" class="m-l-20">Chưa Duyệt</label>
                            }
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <textarea name="CT_SP" cols="30" rows="5" class="form-control no-resize" required>@Model.CT_SP</textarea>
                                <label class="form-label">Mô Tả Sản Phẩm</label>
                            </div>
                        </div>


                        <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
}