@using ShopQuaTang.Areas.Admin.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NHANVIEN>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <div class="row">
                    <div class="col-md-6">
                        <h2>
                            Quản Lí Nhân Viên
                        </h2>
                    </div>
                    <div class="col-md-6">
                        <p class="text-right">@Html.ActionLink("Thêm Nhân Viên Mới", "ThemNhanVien", "QuanLiNhanVien")</p>
                    </div>
                </div>
            </div>
            <div class="body table-responsive">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>MÃ NHÂN VIÊN</th>
                            <th>HỌ TÊN NV</th>
                            <th>CMND</th>
                            <th>USERNAME</th>
                            <th>TRẠNG THÁI</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.MA_NV</th>
                                <td>@item.HOTEN_NV</td>
                                <td>@item.CMMD_NV</td>
                                <td>@item.USERNAME_NV</td>
                                <td>
                                    @if(item.STT_NV==true)
                                    {
                                        <p>Đang Hoạt Động</p>
                                    }
                                    else
                                    {
                                        <p>Đã Nghỉ</p>
                                    }
                                </td>
                                <td>
                                    @if (item.STT_NV == true)
                                    {
                                        <div class="btnstyle">
                                            <a href="@Url.Action("XoaNhanVien","QuanLiNhanVien",new { id=item.MA_NV })" class="btn btn-danger waves-effect">XÓA</a>
                                            <a href="@Url.Action("SuaNhanVien","QuanLiNhanVien",new { id=item.MA_NV })" class="btn btn-info waves-effect">SỬA</a>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="btnstyle">
                                            <a href="@Url.Action("RestoreNhanVien","QuanLiNhanVien",new { id=item.MA_NV })" class="btn btn-success waves-effect">Đã Nghỉ</a>
                                        </div>
                                            
                                    }
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row text-center">
    <ul class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </ul>
</div>
<style>
    .btnstyle a {
        margin-bottom: 10px;
        width: 100px;
    }
</style>