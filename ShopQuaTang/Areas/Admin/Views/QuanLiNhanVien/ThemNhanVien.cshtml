
@{
    ViewBag.Title = "ThemNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ThemNhanVien", "QuanLiNhanVien", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>Thêm Nhân Viên Mới</h2>
                </div>
                <div class="body">
                    <form>
                        @Html.ValidationSummary(true)
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="HOTEN_NV" required>
                                <label class="form-label">Tên Nhân Viên</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="CMMD_NV" required>
                                <label class="form-label">Chứng Minh Thư</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="USERNAME_NV" required>
                                <label class="form-label">Tên Đăng Nhập</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="password" class="form-control" name="newpass" required>
                                <label class="form-label">Mật Khẩu Mới</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="password" class="form-control" name="confirmpass" required>
                                <label class="form-label">Nhập Lại Mật Khẩu</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="radio" name="STT_NV" id="sttt" class="with-gap" value="true">
                            <label for="sttt">Duyệt</label>

                            <input type="radio" name="STT_NV" id="sttf" class="with-gap" value="false">
                            <label for="sttf" class="m-l-20">Chưa Duyệt</label>
                        </div>
                        <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
}