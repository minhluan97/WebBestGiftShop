@model IEnumerable<ShopQuaTang.Areas.Admin.Models.CT_HOADON>
@{
    ViewBag.Title = "ChiTietHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Hover Rows -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    <a href="@Url.Action("Index","QuanLiHoaDon")" style="color:#000000;">Quản Lí Hóa Đơn </a>
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>MÃ HĐ</th>
                            <th>TÊN SẢN PHẨM</th>
                            <th>SỐ LƯỢNG</th>
                            <th>ĐƠN GIÁ</th>
                            <th>THÀNH TIỀN</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MA_HD</td>
                                <td>@item.SANPHAM.TEN_SP</td>
                                <td>@item.SL</td>
                                <td>@item.DONGIA</td>
                                <td>@item.THANHTIEN_HD</td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Hover Rows -->
