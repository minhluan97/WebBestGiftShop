
@{
    ViewBag.Title = "ThemTinTuc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ThemTinTuc", "QuanLiTinTuc", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
     <!-- Basic Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>BASIC VALIDATION</h2>
                </div>
                <div class="body">
                    <form>
                        @Html.ValidationSummary(true)
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="TIEUDE_TIN" required>
                                <label class="form-label">Tiêu Đề</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="text" class="form-control" name="MOTA_TIN" required>
                                <label class="form-label">Mô tả khái quát</label>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <div class="form-line">
                                <input type="file" name="fileUpload" required />
                            </div>
                        </div>
                        

                        

                        <div class="form-group form-float">
                            <div class="form-line">
                                <label class="form-label">Nội dung</label>
                                <textarea name="NOIDUNG_TIN" cols="30" rows="5" class="form-control no-resize" required></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="radio" name="STATUS_TIN" id="sttt" class="with-gap" value="true">
                            <label for="sttt">Duyệt</label>

                            <input type="radio" name="STATUS_TIN" id="sttf" class="with-gap" value="false">
                            <label for="sttf" class="m-l-20">Chưa Duyệt</label>
                        </div>

                        <button class="btn btn-primary waves-effect" type="submit">SUBMIT</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Basic Validation -->
}
