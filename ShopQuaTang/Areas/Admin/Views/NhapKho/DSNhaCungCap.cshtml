@using ShopQuaTang.Areas.Admin.Models
@using PagedList.Mvc;
@model PagedList.PagedList<NHACUNGCAP>
@{
    ViewBag.Title = "DSNhaCungCap";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <div class="row">
                    <div class="col-md-6">
                        <h2>
                            Quản Lí Nhập Kho
                        </h2>
                    </div>
                    <div class="col-md-6">
                        <p class="text-right"><a href="@Url.Action("ThemNhaCungCap","NhapKho")">Thêm Nhà Cung Cấp Mới</a></p>
                    </div>
                </div>
            </div>
            <div class="body table-responsive">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>MÃ NCC</th>
                            <th>TÊN NCC</th>
                            <th>ĐIỆN THOẠI</th>
                            <th>ĐỊA CHỈ</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MA_NCC</td>
                                <td>@item.TEN_NCC</td>
                                <td>@item.DT_NCC</td>
                                <td>@item.DIACHI_NCC</td>
                                <td>
                                    <a href="@Url.Action("SuaNhaCungCap","NhapKho",new { id=item.MA_NCC })" class="btn btn-info waves-effect">SỬA</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<div class="row text-center">
    <ul class="pagination">
        @Html.PagedListPager(Model, page => Url.Action("DSNhaCungCap", new { page = page }))
    </ul>
</div>