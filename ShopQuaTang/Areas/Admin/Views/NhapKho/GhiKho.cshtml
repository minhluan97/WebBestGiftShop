@using ShopQuaTang.Areas.Admin.Models
@model List<NhapKho>
@{
    ViewBag.Title = "GhiKho";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>GhiKho</h2>

<!-- Condensed Table -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    CONDENSED TABLE
                    <small>Add <code>.table-condensed</code> to make tables more compact by cutting cell padding in half.</small>
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Số Lượng Nhập</th>
                            <th>Đơn Giá Nhập</th>
                            <th>Thành Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaSP</td>
                                <td>@item.TenSP</td>
                                <td>@item.SoLuongSPNhap</td>
                                <td>@item.DonGiaSPNhap</td>
                                <th>@item.ThanhTienPN</th>
                                
                            </tr>
                        }

                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3">SL Sản Phẩm: @ViewBag.TongSoLuong</th>
                            <th colspan="2">Tổng Tiền: @String.Format("{0:n0}", ViewBag.TongTien)</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Condensed Table -->
@{
    NHANVIEN nv = (NHANVIEN)Session["TaiKhoanNV"];
}
<div class="row clearfix">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <div class="col-sm-12">
            <div class="form-group">
                <div class="form-line">
                    <input type="text" class="form-control" value="@nv.HOTEN_NV">
                </div>
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group">
                @Html.DropDownList("MA_NCC")
            </div>
        </div>

        <div class="col-sm-6">
            <div class="form-group">
                <div class="form-line">
                    <input value="@DateTime.Now.ToShortDateString()" class="form-control" disabled>
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-group">
                <div class="form-line">
                    <input type="number" name="tongtien" class="form-control" value="@String.Format("{0:n0}",ViewBag.TongTien)" disabled hidden>
                </div>
            </div>
        </div>

        <div class="col-sm-12">
            <div class="form-group">
                <div class="form-line">
                    <input type="number" class="form-control" name="tongsl" value="@String.Format("{0:n0}",ViewBag.TongSoLuong)" disabled hidden>
                </div>
            </div>
        </div>

        <div class="col-sm-12 text-center">
            <div class="form-group">
                <button type="submit" class="btn btn-primary waves-effect"><i class="fa fa-check-circle"></i> Đồng Ý Nhập Kho</button>
            </div>
        </div>


    }
    
</div>