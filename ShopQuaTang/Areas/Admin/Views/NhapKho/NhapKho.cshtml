@using ShopQuaTang.Areas.Admin.Models
@model List<NhapKho>
@{
    ViewBag.Title = "NhapKho";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Condensed Table -->
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    CONDENSED TABLE
                    <small>Add <code>.table-condensed</code> to make tables more compact by cutting cell padding in half.</small>
                </h2>
            </div>
            <div class="body table-responsive">
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Số Lượng Nhập</th>
                            <th>Đơn Giá Nhập</th>
                            <th>Thành Tiền</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaSP</td>
                                <td>@item.TenSP</td>
                                @using (Html.BeginForm("CapNhatKho", "NhapKho", new { @masp = item.MaSP }))
                                {
                                    <th>
                                        <input type="number" value="@item.SoLuongSPNhap" name="slnhap" class="form-control" style="max-width: 70px;" />
                                    </th>

                                    <td>@item.DonGiaSPNhap</td>
                                    <th>@item.ThanhTienPN</th>
                                    <td>
                                        @*<button type="button" class="btn bg-red waves-effect">@Html.ActionLink("Xóa", "XoaNhapKho", new { @masp = item.MaSP })</button>*@
                                        <a href="@Url.Action("XoaNhapKho","NhapKho", new { @masp = item.MaSP })" class="btn bg-red waves-effect">XÓA</a>
                                    </td>
                                    <td>
                                        <input type="submit" value="Update" class="btn btn-success" />
                                    </td>
                                }
                            </tr>
                        }
                        
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="3">SL Sản Phẩm: @ViewBag.TongSoLuong</th>
                            <th colspan="2">Tổng Tiền: @String.Format("{0:n0}", ViewBag.TongTien)</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- #END# Condensed Table -->
<!-- Bootstrap Default Buttons -->
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="body">
                <div class="button-demo">
                    <a href="@Url.Action("ChonSanPham","QuanLiSanPham")" class="btn btn-success waves-effect">Chọn Sản Phẩm</a>
                    <a href="@Url.Action("XoaTatCaNhapKho","NhapKho")" class="btn btn-danger waves-effect">Xóa Tất Cả</a>
                    <a href="@Url.Action("GhiKho","NhapKho")" class="btn btn-info waves-effect">Ghi Kho</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- #END# Bootstrap Default Buttons -->